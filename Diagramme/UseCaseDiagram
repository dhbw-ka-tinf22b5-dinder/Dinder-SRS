@startuml
left to right direction

package account {
(register)
(login)
}

package advertisement {
(create)
(edit)
(delete)
}

package "find work" {
(swipe)
(search)
}

package work {
(chat)
(end work)
(approve work)
}

:User:
User --> register
User --> login
User --> swipe
User --> search
User --> chat
User --> (end work)

:employer:
employer --> create
employer --> edit
employer --> delete
employer --> chat
employer --> (approve work)

@enduml
